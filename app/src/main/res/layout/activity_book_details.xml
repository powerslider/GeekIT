<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableRow
        android:id="@+id/book_details_table_row1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/book_cover_details"
            android:layout_width="@dimen/book_cover_details_item_width"
            android:layout_height="@dimen/book_cover_details_item_height"
            android:layout_marginTop="@dimen/book_cover_details_margin_top"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/java"
            android:contentDescription="@string/book_cover_details_item"/>

        <Button
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_download_text"
            android:layout_marginTop="@dimen/download_button_margin_top"
            android:layout_marginStart="@dimen/book_details_download_button_margin_left"
            android:layout_marginLeft="@dimen/book_details_download_button_margin_left"/>

    </TableRow>

    <TableRow
        android:id="@+id/book_details_table_row2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_horizontal">

        <ExpandableListView
            android:id="@+id/book_details_exp_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/book_details_exp_list_margin_top"/>

    </TableRow>



</TableLayout>